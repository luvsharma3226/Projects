package com.ng.admin.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.ng.admin.dto.PortalDto;
import com.ng.admin.dto.ResponseDto;
import com.ng.admin.service.IPortalService;
@CrossOrigin("*")
@RestController
public class PortalController {
	@Autowired
	private IPortalService portalService;
	
	@PostMapping("/saveportaldetails")
	public ResponseEntity<?> savePortalDetails(@RequestBody PortalDto portalDto) {
		return new ResponseEntity<>(new ResponseDto( portalService.savePortalDetails(portalDto)),HttpStatus.OK);
	}
	//Method:To display portal details name,alias,createdby,creationtime
	@GetMapping("/getportallist")
	public ResponseEntity<?> getPortalList(){
		return new ResponseEntity<>(portalService.getPortalList(), HttpStatus.OK);
	}
	//Mthod: To get complete object of portal
	@GetMapping("/getcompleteportaldetails")	
	public ResponseEntity<?> getCompletePortalList(){
		return new ResponseEntity<>(portalService.getCompletePortalDetails(), HttpStatus.OK);
	}
	//Method: To get portal name and id
	@GetMapping("/getportalidlist")
	public ResponseEntity<?> getPortalNameIdList(){
		return new ResponseEntity<>(portalService.getPortalNameIdList(), HttpStatus.OK);
	}
	//Method : get menu permssions related to portal
	@GetMapping("/getMenuMappingList/{id}")
	public ResponseEntity<?> getPortalMenuMappingList(@PathVariable Integer id){
		return new ResponseEntity<>(portalService.getPortalMenuMappingList(id), null);
	}
	
}
